<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ProductDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/image_detail"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/safi_skincare"/>

        <TextView
            android:id="@+id/product_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Safi"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#000"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Age Defy Foam Cleanser Deep Exfoliator"
            android:fontFamily="@font/poppins"
            android:textColor="#000"
            android:textAlignment="center"
            android:textSize="13sp"/>

        <Button
            android:id="@+id/category_btn"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:padding="0dp"
            android:text="Skin Care"
            android:textSize="12sp"
            android:background="@drawable/rv_shape"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:layout_width="0dp">

                <TextView
                    android:id="@+id/sizeOrshade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Size"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="#000000"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/product_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="75 gr"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins"
                    android:textColor="#000000"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:layout_width="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="#000000"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="IDR50000"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins"
                    android:textColor="#000000"
                    android:gravity="center"/>


            </LinearLayout>

        </LinearLayout>
        
        <Button
            android:id="@+id/addRev_fromProduct"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="0dp"
            android:text="Add review"
            android:textSize="13sp"
            android:layout_gravity="center"
            android:textAllCaps="false"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/kPrimaryColor"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reviews"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#000"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:textSize="15sp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rv_review"
            />

    </LinearLayout>

</ScrollView>