<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.amoriproject">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/amori_logo_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/amori_logo_foreground"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".UpdateProfile"
            android:label="@string/title_activity_update_profile"></activity>
        <activity android:name=".ReviewByCategory" />
        <activity android:name=".EditReview" />
        <activity android:name=".NewReview" />
        <activity android:name=".Dashboard" />
        <activity android:name=".Register" />
        <activity
            android:name=".Login"
            android:label=""
            android:noHistory="true"></activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>